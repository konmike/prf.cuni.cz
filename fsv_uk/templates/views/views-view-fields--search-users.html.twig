<li class="contact__results__item">

	{% if current_language == 'cs' %}
		{% set link = 'https://www.prf.cuni.cz/detail-cloveka/' ~ fields.field_id_osoba.content ~ '' %}
	{% else %}
		{% set link = 'https://www.prf.cuni.cz/en/detail-cloveka/' ~ fields.field_id_osoba.content ~ '' %}
	{% endif %}

	{# <a href="{{ fields.view_user_1.content }}"> #}
	<a href="{{ link }}">
		<div class="contact__results__img contact__results__img" style="background-image: url({{ fields.user_picture.content }});"></div>
	</a>

	<div class="contact__results__info-wrap">

		<h3
			class="contact__results__title {% if fields.field_title.content is not empty %} nospace {% endif %}">
			{# <a href="{{ fields.view_user_1.content }}"> #}
			<a href="{{ link }}">
				{{ fields.field_titul.content }}{{ fields.field_jmeno.content }}
				{{ fields.field_prijmeni.content }}{{ fields.field_titul_za.content }}
			</a>
		</h3>

		{% if fields.field_mail.content is not empty %}
			<p class="contact__results__email">
				<span class="contact__results__info-title">E-mail:</span>
				{{ fields.field_mail.content }}
			</p>
		{% endif %}
		{% if fields.field_telefon.content is not empty %}
			<p class="contact__results__phones">
				<span class="contact__results__info-title">Telefon:</span>
				{{ fields.field_telefon.content }}
			</p>
		{% endif %}

		<a href="{{ link }}" class="contact__results__detail">detail</a>
		{# {{ fields.view_user.content }} #}
	</div>

</li>
