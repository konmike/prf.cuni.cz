{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}


{% if content %}
    <footer class="footer">
        <div class="footer__outer">
            <div class="footer__container container">
                <nav class="footer__nav">
                    {% block footer_content %}
                        <ul class="footer__nav__list">
                            {{ content }}
                        </ul>
                    {% endblock %}
                </nav>
            </div>
        </div>
        <div class="footer__copyright">
            <div class="container footer__container footer__copyright__container">
                <div class="footer__copyright__left">
                    &copy; FSV UK {{ "now"|date("Y") }}, {% trans %}photo: UK , <a href="http://thinkstock.com/" target="_blank">Thinkstock.com</a> and <a href="https://www.shutterstock.com/" target="_blank">Shutterstock.com</a>{% endtrans %}
                </div>
                <div class="footer__copyright__right">
                    <ul class="footer__copyright__links">
                        <li class="footer__copyright__item">
                            <div class="footer__copyright__logo-arts">
                                <span>{% trans %} Powered by: {% endtrans %} </span>
                                <a href="https://www.drupal.org/8" target="_blank">Drupal 8</a> & <a target="_blank" href="https://drupalarts.cz" title="drupal"><img src="https://drupalarts.cz/drupalexpert/drupal_arts.png" alt="Drupal"> Drupal ·ê¨rts</a>
                            </div>
                        </li>
                        <li class="footer__copyright__item">
                        <a href="http://www.fsv.cuni.cz/" target="_blank" class="footer__copyright__link">{{ 'www.fsv.cuni.cz'}}</a>
                        </li>
                        <li class="footer__copyright__item">
                            <a href="http://www.cuni.cz/" target="_blank" class="footer__copyright__link">{{'www.cuni.cz'}}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
{% endif %}
