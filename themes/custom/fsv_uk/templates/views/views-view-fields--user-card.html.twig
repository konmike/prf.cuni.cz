<div class="contact__results__img contact__results__img" style="background-image: url({{ fields.user_picture.content }});"></div>
<div class="contact__results__info-wrap">
	
	<h3 class="contact__results__title {% if fields.field_title.content is not empty %} nospace {% endif %}">
	{{ fields.field_titul.content }}{{ fields.field_jmeno.content }} {{ fields.field_prijmeni.content }}{{ fields.field_titul_za.content }}
	</h3>
	{% if fields.field_title.content is not empty %}
		<h3 class="contact_function nospace">{{ fields.field_title.content }}</h3>
	{% endif %}
	{% if fields.field_mail.content is not empty %}
		<div>
			<p class="contact__results__email">
				<span class="contact__results__info-title">E-mail: </span>
				{{ fields.field_mail.content }}
			</p>
		</div>
	{% endif %}
	{% if fields.field_telefon.content is not empty %}
		<div>
			<p class="contact__results__phones">
				<span class="contact__results__info-title">Telefon: </span>
				{{ fields.field_telefon.content }}
			</p>
		</div>
	{% endif %}
	
	{{ fields.view_user.content }}
</div>